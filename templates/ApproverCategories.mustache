<!-- templates/ApproverCategories.mustache -->
<h1>Approvers List</h1>
<table border="1">
	<thead>
	<tr>
		<th>Approver (ID, Name)</th>
		<th>Categories</th>
	</tr>
	</thead>
	<tbody>
	{{#approvers}}
		<tr>
			<td>{{id}}, {{name}}</td>
			<td>
				{{#categories}}
					<form action="/index.php/Special:ApproverCategories" method="POST" style="display:inline;">
						<input type="hidden" name="userId" value="{{../id}}">
						<input type="hidden" name="category" value="{{.}}">
						{{.}} <button type="submit" name="action" value="delete">Delete</button>
					</form>
				{{/categories}}
				<button type="submit" name="action" value="add">Add</button>
			</td>
		</tr>
	{{/approvers}}
	</tbody>
</table>
