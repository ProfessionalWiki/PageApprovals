<h1>Approvers List</h1>
<table border="1">
	<thead>
	<tr>
		<th>Approver (ID, Name)</th>
		<th>Categories</th>
	</tr>
	</thead>
	<tbody>
	{{#approvers}}
		<tr>
			<td>{{username}}</td>
			<td>
				{{#categories}}
					<p class="category-row">
						{{.}}
						<button class="approval-delete-btn">  <!--TODO-->
							Delete
						</button>
					</p>
				{{/categories}}
				<button class="add-button" name="action" value="add">Add</button> <!--TODO-->
			</td>
		</tr>
	{{/approvers}}
	</tbody>
</table>
<style lang="css">
	td, th {
		padding: 10px;
	}

	.approval-delete-btn {
		font-size: 10px;
		padding: 3px;
		color: red;
		cursor: pointer;
		float: right;
		margin-left: 10px;
	}

	.category-row {
		padding-top: 3px;
	}

	.add-button {
		margin-top: 10px;
	}

</style>
