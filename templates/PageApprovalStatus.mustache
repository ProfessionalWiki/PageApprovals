<div class="page-approval-container">
	<div class="approval-status-badge {{#isPageApproved}}approved-badge{{/isPageApproved}}{{^isPageApproved}}not-approved-badge{{/isPageApproved}}">
		<div class="status-icon"></div>
		<div class="approved-status-text {{^isPageApproved}}d-none{{/isPageApproved}}">APPROVED</div>
		<div class="approved-status-text {{#isPageApproved}}d-none{{/isPageApproved}}">Not Approved</div>
		{{#canApprove}}
			<div class="approval-dropdown">
				<button id="unapproveButton" class="dropdown-item {{^isPageApproved}}d-none{{/isPageApproved}}">
					<span class="icon"></span>
					{{unapproveButtonText}}
				</button>
				<button id="approveButton" class="dropdown-item {{#isPageApproved}}d-none{{/isPageApproved}}">
					<span>&#10003;</span>
					{{approveButtonText}}
				</button>
			</div>
		{{/canApprove}}
		<div class="tooltip {{^isPageApproved}}d-none{{/isPageApproved}}">
			<small class="approver-details {{^isPageApproved}}d-none{{/isPageApproved}}">
				<span class="approver-name">
					{{approverRealName}}
				</span> approved page <span class="convert-timestamp" data-timestamp="{{approvalTimestamp}}">Loading...</span>
			</small>
		</div>
	</div>
	<div class="approver-details {{^isPageApproved}}d-none{{/isPageApproved}}">
		<small class="convert-timestamp page-approval-text-muted" data-timestamp="{{approvalTimestamp}}">
			Loading... </small>
	</div>
</div>

