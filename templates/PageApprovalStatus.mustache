<div class="page-approval-container">
	<div class="approval-status-badge {{#isPageApproved}}approved-badge{{/isPageApproved}}{{^isPageApproved}}unapproved-badge{{/isPageApproved}}">
		<div class="status-icon"></div>
		<div class="approved-status-text {{^isPageApproved}}display-none{{/isPageApproved}}">APPROVED</div>
		<div class="approved-status-text {{#isPageApproved}}display-none{{/isPageApproved}}">Not Approved</div>
		{{#canApprove}}
			<div class="approval-dropdown display-none">
				<button id="unapproveButton" class="dropdown-item {{^isPageApproved}}display-none{{/isPageApproved}}">
					<span class="unapprove-icon"></span>
					{{unapproveButtonText}}
				</button>
				<button id="approveButton" class="dropdown-item {{#isPageApproved}}display-none{{/isPageApproved}}">
					<span class="checkmark-icon"></span>
					{{approveButtonText}}
				</button>
			</div>
		{{/canApprove}}
		<div class="tooltip {{^isPageApproved}}display-none{{/isPageApproved}}">
			<small class="approver-details {{^isPageApproved}}display-none{{/isPageApproved}}">
				<span class="approver-name">
					{{approverUserName}}
				</span> approved page
				<span class="convert-timestamp" data-timestamp="{{approvalTimestamp}}">Loading...</span>
			</small>
		</div>
	</div>
	<div class="approver-details {{^isPageApproved}}display-none{{/isPageApproved}}">
		<small class="convert-timestamp page-approval-text-muted" data-timestamp="{{approvalTimestamp}}">
			Loading...
		</small>
	</div>
</div>

<style>
	.page-approval-container {
		position: absolute;
		top: -55px;
		right: 0;
		z-index: 1;
		display: flex;
		align-items: center;
	}

	.tooltip {
		visibility: hidden;
		position: absolute;
	}

	.approval-status-badge {
		display: flex;
		align-items: center;
		padding: 4px 15px;
		border-radius: 20px;
		font-weight: bold;
		font-size: 12px;
		cursor: pointer;
		position: relative;
	}

	.approved-badge {
		color: #0f7958;
	}

	.approved-badge {
		background-color: rgba(209, 249, 216, 0.75);
		padding: 5px 30px;
	}

	.unapproved-badge {
		background-color: lightgray;
		color: black;
		padding: 5px 23px;
	}

	.approved-badge:hover {
		background-color: #bce0c2;
	}

	.status-icon, .checkmark-icon, .unapprove-icon {
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
	}

	.status-icon {
		width: 22px;
		height: 22px;
		margin-right: 5px;
	}

	.approved-badge .status-icon {
		background-image: url('{{extensionAssetsPath}}/templates/Icons/approved-icon.svg');
		margin-right: 10px;
	}

	.unapproved-badge .status-icon {
		background-image: url('{{extensionAssetsPath}}/templates/Icons/not-approved-icon.svg');
	}

	.checkmark-icon {
		width: 24px;
		height: 24px;
		background-image: url('{{extensionAssetsPath}}/templates/Icons/checkmark.svg');
	}

	#unapproveButton .unapprove-icon {
		width: 20px;
		height: 20px;
		background-image: url('{{extensionAssetsPath}}/templates/Icons/unapprove-icon.svg');
	}

	.approver-details {
		font-size: 12px;
	}

	.page-approval-text-muted {
		color: gray;
		display: inline-block;
		width: 110px;
		text-align: center;
	}

	.page-approval-text-muted::first-letter {
		text-transform: uppercase;
	}

	.approved-status-text {
		user-select: none;
	}

	.display-none {
		display: none !important;
	}
</style>
